<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.equalize.controller.organizer.DataSourceController"
            stylesheets="@../../css/data_source.css">

    <children>
        <VBox spacing="18.0"
              AnchorPane.topAnchor="20.0"
              AnchorPane.leftAnchor="30.0"
              AnchorPane.rightAnchor="30.0"
              AnchorPane.bottomAnchor="20.0"
              styleClass="data-source-container">

            <!-- Title -->
            <Label text="Data Source / Participant Loader"
                   styleClass="data-source-title"/>

            <!-- Subtitle -->
            <Label text="Load participant CSV, run preprocessing, and store clean and invalid rows."
                   styleClass="data-source-subtitle"/>

            <Separator/>

            <!-- Buttons row -->
            <HBox spacing="10">
                <Button text="Load default participants_saved.csv"
                        onAction="#handleLoadDefault"
                        styleClass="primary-button"/>

                <Button text="Load external CSV..."
                        onAction="#handleLoadExternal"
                        styleClass="secondary-button"/>
            </HBox>

            <Separator/>

            <!-- Info grid -->
            <GridPane hgap="8" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="150" halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="340"/>
                </columnConstraints>

                <children>
                    <Label text="Source file:"
                           GridPane.rowIndex="0" GridPane.columnIndex="0"
                           styleClass="form-label"/>
                    <Label fx:id="sourceFileLabel"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           styleClass="form-value"/>

                    <Label text="Valid participants:"
                           GridPane.rowIndex="1" GridPane.columnIndex="0"
                           styleClass="form-label"/>
                    <Label fx:id="validCountLabel"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                           styleClass="form-value"/>

                    <Label text="Invalid rows:"
                           GridPane.rowIndex="2" GridPane.columnIndex="0"
                           styleClass="form-label"/>
                    <Label fx:id="invalidCountLabel"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"
                           styleClass="form-value"/>
                </children>
            </GridPane>

            <!-- Error -->
            <Label fx:id="errorLabel" styleClass="error-label"/>

            <!-- Back button -->
            <HBox alignment="CENTER_RIGHT">
                <Button text="Back to Dashboard"
                        onAction="#handleBackToDashboard"
                        styleClass="secondary-button"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
