<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.teame.controller.organizer.OrganizerDashboardController">

    <children>
        <VBox spacing="16.0" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="40.0"
              AnchorPane.rightAnchor="40.0" AnchorPane.bottomAnchor="30.0">

            <Label text="Organizer Dashboard"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <Label text="Manage participants, handle invalid rows, form and view teams." />

            <Separator/>

            <VBox spacing="10">
                <Button text="1. Data Source / Load Participants"
                        onAction="#handleOpenDataSource" prefWidth="260"/>

                <Button text="2. View / Fix Invalid Rows"
                        onAction="#handleOpenInvalidRows" prefWidth="260"/>

                <Button text="3. Form Teams"
                        onAction="#handleOpenTeamFormation" prefWidth="260"/>

                <Button text="4. View and Export Teams"
                        onAction="#handleOpenViewTeams" prefWidth="260"/>
            </VBox>

            <Separator/>

            <HBox spacing="10">
                <Button text="Back to Participant Login"
                        onAction="#handleBackToParticipant"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
