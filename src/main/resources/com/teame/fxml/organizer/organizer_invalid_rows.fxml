<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.teame.controller.organizer.InvalidRowsController"
            stylesheets="@../../css/invalid_rows.css">

    <children>
        <VBox spacing="16.0"
              AnchorPane.topAnchor="20.0"
              AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0"
              AnchorPane.bottomAnchor="20.0"
              styleClass="invalid-rows-container">

            <!-- Title -->
            <Label text="Invalid Rows"
                   styleClass="invalid-rows-title"/>

            <!-- Subtitle -->
            <Label text="These rows contained errors during CSV parsing or validation."
                   styleClass="invalid-rows-subtitle"/>

            <!-- Summary -->
            <Label fx:id="summaryLabel"
                   styleClass="summary-label"/>

            <!-- Table -->
            <TableView fx:id="invalidTable" prefHeight="360.0">
                <columns>
                    <TableColumn fx:id="rowNumberColumn" text="Row #" prefWidth="70.0"/>
                    <TableColumn fx:id="rawLineColumn" text="Raw Line" prefWidth="420.0"/>
                    <TableColumn fx:id="errorColumn" text="Error" prefWidth="260.0"/>
                </columns>
            </TableView>

            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Back to Dashboard"
                        onAction="#handleBackToDashboard"
                        styleClass="secondary-button"/>
                <Button text="Back to Data Source"
                        onAction="#handleBackToDataSource"
                        styleClass="primary-button"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
