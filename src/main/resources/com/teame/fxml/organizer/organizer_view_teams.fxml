<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.teame.controller.organizer.ViewTeamsController">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

            <Label text="Formed Teams"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <Label text="Total teams:"/>
                <Label fx:id="teamCountLabel"/>

                <Label text="Total participants:"/>
                <Label fx:id="participantCountLabel"/>
            </HBox>

            <SplitPane dividerPositions="0.25">
                <items>
                    <!-- Left: list of teams -->
                    <VBox spacing="6">
                        <Label text="Teams"/>
                        <ListView fx:id="teamListView" />
                    </VBox>

                    <!-- Right: members of selected team -->
                    <VBox spacing="6">
                        <Label fx:id="selectedTeamLabel" text="No team selected"/>
                        <TableView fx:id="memberTable" prefHeight="320.0">
                            <columns>
                                <TableColumn fx:id="idColumn" text="ID" prefWidth="70.0"/>
                                <TableColumn fx:id="nameColumn" text="Name" prefWidth="120.0"/>
                                <TableColumn fx:id="gameColumn" text="Game" prefWidth="90.0"/>
                                <TableColumn fx:id="skillColumn" text="Skill" prefWidth="60.0"/>
                                <TableColumn fx:id="roleColumn" text="Role" prefWidth="90.0"/>
                                <TableColumn fx:id="personalityColumn" text="Personality" prefWidth="110.0"/>
                            </columns>
                        </TableView>
                    </VBox>
                </items>
            </SplitPane>

            <HBox spacing="10">
                <Button text="Export Teams to CSV" onAction="#handleExport"/>
                <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>
            </HBox>

            <Label fx:id="statusLabel"/>
            <Label fx:id="errorLabel" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
