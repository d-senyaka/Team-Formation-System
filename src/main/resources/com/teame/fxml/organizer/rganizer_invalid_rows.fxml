<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.teame.controller.organizer.InvalidRowsController">

    <children>
        <VBox spacing="12.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

            <Label text="Invalid Rows"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Label text="These rows contained errors during CSV parsing or validation." />

            <Label fx:id="summaryLabel" />

            <TableView fx:id="invalidTable" prefHeight="360.0">
                <columns>
                    <TableColumn fx:id="rowNumberColumn" text="Row #" prefWidth="70.0"/>
                    <TableColumn fx:id="rawLineColumn" text="Raw Line" prefWidth="420.0"/>
                    <TableColumn fx:id="errorColumn" text="Error" prefWidth="260.0"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Button text="Back to Dashboard" onAction="#handleBackToDashboard"/>
                <Button text="Back to Data Source" onAction="#handleBackToDataSource"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
